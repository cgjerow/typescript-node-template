{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es6",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
